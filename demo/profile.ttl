# --
# Service URL: http://localhost:8080/tutorial/demo-sparql-micro-service?param=Delphinus+delphis
# --

st:demosms a st:Server ;
    st:service "demo-sparql-micro-service" ;

    st:param [
        st:export true ;
        st:hyperlink true ;
    ] ;

    # Select how to get the data (query vs. static file)
    st:workflow st:demosmsWorkflow ;
#    st:content st:demosmsContent ;
    .

# Load data from a query
st:demosmsWorkflow a sw:Workflow ;
    sw:body (
        [ a sw:Query ;          sw:uri <query/query.rq> ]
        [ a sw:Transformation ; sw:uri <sttl/> ]
    ).

# loading data from a file
st:demosmsContent a sw:Workflow ;
    sw:body (
        [ a sw:Load ; sw:path <data/constr.ttl>  ; sw:name st:data1 ]
    ).

# List URLs where STTL is allowed to access to get html templates
st:access st:namespace <http://localhost/sttl>.
st:access st:namespace <https://sparql-micro-services.org>.
